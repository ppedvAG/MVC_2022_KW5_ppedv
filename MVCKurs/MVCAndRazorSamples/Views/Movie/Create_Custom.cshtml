@model MVCAndRazorSamples.Models.Movie
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Erstelle ein Movie-Datensatz</h1>
<hr/>

<form method="post" >
    <div class="form-group">
        <label asp-for="Title" class="control-label"/>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description" class="control-label"/>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genre" class="control-label"/>
        <select class="form-control" asp-for="Genre" asp-items="Html.GetEnumSelectList<GenreTyp>()">
            <option selected="selected" value="">Please select</option>
        </select>
          @*SelectList nach Generierung (falsch) -> <select asp-for="GenreType" class="form-control"></select>*@
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"/>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="form-group">
        <input asp-action = "Create" type="submit" value="Erstelle" class="bnt btn-primary" />
    </div>
</form>

