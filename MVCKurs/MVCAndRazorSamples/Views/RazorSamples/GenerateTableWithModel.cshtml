@model IEnumerable<Person>
@{
    ViewData["Title"] = "GenerateTableWithModel";
}

<h1>GenerateTableWithModel</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name) @*//V<riablenname wird als Spaltennamen ausgebben*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Person currenPerson in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => currenPerson.Name) /* Variabeninhalt wird ausgegeben*/
                </td>
                  <td>
                    @Html.DisplayFor(modelItem => currenPerson.Age) /* Variabeninhalt wird ausgegeben*/
                </td>
                <td>
                    <a asp-action="Edit">Edit</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
